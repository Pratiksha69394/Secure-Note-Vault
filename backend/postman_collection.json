{
  "info": {
    "name": "Secure Notes Vault - Basic",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"test\",\n  \"email\": \"test@example.com\",\n  \"password\": \"password\"\n}"
        },
        "url": { "raw": "http://localhost:5000/api/auth/register", "host": ["http://localhost:5000/api/auth/register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" } ],
        "body": { "mode": "raw", "raw": "{\n  \"email\": \"test@example.com\",\n  \"password\": \"password\"\n}" },
        "url": { "raw": "http://localhost:5000/api/auth/login", "host": ["http://localhost:5000/api/auth/login"] }
      }
    },
    {
      "name": "Create Note",
      "request": {
        "method": "POST",
        "header": [ { "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "body": { "mode": "raw", "raw": "{\n  \"title\": \"Hello\",\n  \"content\": \"secret text\"\n}" },
        "url": { "raw": "http://localhost:5000/api/notes", "host": ["http://localhost:5000/api/notes"] }
      }
    },
    {
      "name": "Get My Notes",
      "request": {
        "method": "GET",
        "header": [ { "key": "Authorization", "value": "Bearer {{token}}" } ],
        "url": { "raw": "http://localhost:5000/api/notes/my", "host": ["http://localhost:5000/api/notes/my"] }
      }
    }
  ]
}
